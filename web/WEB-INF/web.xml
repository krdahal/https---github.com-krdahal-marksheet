<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <servlet>
        <servlet-name>user</servlet-name>
        <servlet-class>controller.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>student</servlet-name>
        <servlet-class>controller.StudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MarksServlet</servlet-name>
        <servlet-class>controller.MarksServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/login</url-pattern>
     </servlet-mapping>


    <servlet-mapping>
        <servlet-name> user</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name> user</servlet-name>
        <url-pattern>/userList</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name> user</servlet-name>
        <url-pattern>/userForm</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name> user</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name> user</servlet-name>
        <url-pattern>/userDelete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name> user</servlet-name>
        <url-pattern>/userEdit</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name> user</servlet-name>
        <url-pattern>/userUpdate</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name> student</servlet-name>
        <url-pattern>/studentList</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name> student</servlet-name>
        <url-pattern>/studentForm</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name> student</servlet-name>
        <url-pattern>/studentAdd</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name> student</servlet-name>
        <url-pattern>/studentEdit</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name> student</servlet-name>
        <url-pattern>/studentUpdate</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name> student</servlet-name>
        <url-pattern>/studentDelete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name> user</servlet-name>
        <url-pattern>/subject</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name> MarksServlet</servlet-name>
        <url-pattern>/marks</url-pattern>
    </servlet-mapping>





</web-app>